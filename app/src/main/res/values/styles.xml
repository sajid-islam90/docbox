<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/green</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="ListViewTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:background">@color/white</item>
        </style>


    <style name="NotesTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/green</item>




        <!-- Customize your theme here. -->
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>


    </style>
    <style name="MainActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="MainActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainActivity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="menu_labels_style2">
        <item name="android:background">@drawable/fab_label_back_associations</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TabbedActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBarTab</item>

        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/green</item>
        <item name="actionBarTabTextStyle">@style/TabStyle</item>
    </style>

    <style name="TabStyle" parent="Widget.AppCompat.ActionBar.TabText">

    <item name="android:textColor">@color/black</item>

    </style>

<style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

        <!-- Support library compatibility -->
        <item name="background">@color/green</item>




    </style>

    <style name="MyActionBarTab" parent="@style/Widget.AppCompat.Light.ActionBar">

        <!-- Support library compatibility -->
        <item name="background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>

    </style>



</resources>
