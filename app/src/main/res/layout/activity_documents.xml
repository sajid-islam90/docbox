<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewDocuments"
            android:layout_weight="1" />

        <utilityClasses.floatingactionbutton.FloatingActionsMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view5"
            app:fab_labelsPosition="left"
            app:fab_labelStyle="@style/menu_labels_style"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        <utilityClasses.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_action_new"
            app:fab_title="Add Report"

            android:id="@+id/view2"
            android:layout_gravity="right"
            android:clickable="true"
            android:onClick="startDocCam"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
            <utilityClasses.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_action_upload"
                app:fab_title="Upload Report"
                android:id="@+id/view3"
                android:layout_gravity="right"
                android:clickable="true"
                android:onClick="uploadDoc"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </utilityClasses.floatingactionbutton.FloatingActionsMenu>


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:text="Add Document"
            android:id="@+id/button4"
            android:layout_gravity="bottom"
            android:onClick="startDocCam"
            android:nestedScrollingEnabled="true"
            android:layout_weight="1"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
