<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_complaint">

            <TextView
                android:text="Chief Complaint :"
                android:layout_height="wrap_content"
                android:id="@+id/textView74"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:textSize="11sp"
                android:layout_weight=".005"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView74"
                android:layout_toRightOf="@+id/textView74"
                android:layout_toEndOf="@+id/textView74"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:id="@+id/textViewComplaint"
                android:textSize="13sp"
                android:textColor="#7E57C2"
                android:textStyle="normal|bold"
                android:layout_weight="1"
                android:layout_marginTop="11dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_complaint"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="11dp">

            <TextView
                android:text="Date :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView74"
                android:layout_alignStart="@+id/textView74"
                android:layout_marginTop="5dp"
                android:id="@+id/textView76"
                android:textSize="11sp"
                android:layout_weight=".01"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDate"
                android:layout_alignBaseline="@+id/textView76"
                android:layout_toRightOf="@+id/textView76"
                android:layout_toEndOf="@+id/textView76"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:textSize="11sp"
                android:textColor="#01579B"
                android:layout_weight="1"
                android:text="wwwwww"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>