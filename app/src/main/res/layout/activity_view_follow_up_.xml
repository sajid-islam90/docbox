<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.genericNotesActivity"
    android:padding="3dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/contact_bar"
        android:layout_margin="5dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fieldsList"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:descendantFocusability="afterDescendants"
            android:layout_weight="1"

            android:contextClickable="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:padding="5dp"
            android:id="@+id/layout2"
            android:layout_below="@+id/layout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Other Added Fields"
                android:id="@+id/textView6"
                android:layout_above="@+id/listViewOtherHist"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/green"
                android:layout_marginBottom="5dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/listViewOtherHist"

                android:layout_above="@+id/Hist_grid"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Added Media"
                android:id="@+id/textView7"
                android:textColor="@color/green"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/listViewMediaFollowUp"

                android:layout_above="@+id/Hist_grid"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>





