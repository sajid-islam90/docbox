<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="activity.PatientProfileActivity"
    android:onClick="showDocuments">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView3"
        android:id="@+id/linear_layout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="Name : "
            android:autoText="false"
            android:textSize="15dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:background="@null"
            android:textSize="21dp"
            android:editable="false"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear_layout4"
        android:id="@+id/linear_layout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="Age : "
            android:autoText="false"
            android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="21dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"

        android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear_layout5"
        android:id="@+id/linear_layout6">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/linear_layout5"
        android:layout_centerHorizontal="true"
        android:text="Height : "
        android:autoText="false"
        android:textSize="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/linear_layout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="21dp"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear_layout6"
        android:id="@+id/linear_layout7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"

        android:layout_centerHorizontal="true"
        android:text="Gender : "
        android:autoText="false"
        android:textSize="15dp" />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/linear_layout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="21dp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear_layout7"
        android:id="@+id/linear_layout8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnosis : "
        android:id="@+id/textView9"
        android:layout_below="@+id/linear_layout7"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="21dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linear_layout8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:id="@+id/button3"
            android:layout_below="@+id/linear_layout8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:ellipsize="none"
            android:enabled="true"
            android:focusable="false"
            android:onClick="showNotes"
            android:textSize="10dp"
            android:layout_alignRight="@+id/linear_layout8"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Documents"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="showDocuments"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/linear_layout8"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_button"
            android:id="@+id/button_edit"
            android:onClick="editpatient"
            android:layout_below="@+id/linear_layout8"
            android:layout_marginTop="0dp"
            android:layout_alignParentLeft="false"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:enabled="true" />
    </LinearLayout>


</RelativeLayout>
