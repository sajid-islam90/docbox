<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/circle"
        android:orientation="vertical"
        android:id="@+id/layourAnnouncementAdapterBack"
        android:layout_width="70dp"
        android:gravity="center"
        android:layout_height="70dp">
        <TextView
            android:textSize="16sp"
            android:text="22"
            android:textColor="#fff"
            android:id="@+id/textDateAnouncement"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="17sp"
            android:text="Dec"
            android:textColor="#fff"
            android:id="@+id/textMonthAnouncement"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="16sp"
        android:textColor="#616161"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:text="Survey of Osteoarticular tuberculosis"
        android:id="@+id/textTitleAnnouncement"
        android:gravity="left"
        android:layout_toRightOf="@+id/layourAnnouncementAdapterBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#818181"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textTitleAnnouncement"
        android:text="Survey of Osteoarticular tuberculosis"
        android:id="@+id/textSubTitleAnnouncement"
        android:gravity="left"
        android:layout_toRightOf="@+id/layourAnnouncementAdapterBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>