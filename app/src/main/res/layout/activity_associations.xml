<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageLoginBackgroundAssocaitions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="40dp"
        android:padding="10dp"
        android:src="@drawable/header_logo_upoa"
        android:id="@+id/imageLogoAssocitaionLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerSelectAssociation"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/etLoginInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etLoginInputText"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:hint="Enter your medical registration ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etLoginInputText"
        android:text="Join Association"
        android:id="@+id/btnLoginAssociation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>